<Page
    x:Class="ActuatorXmpp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ActuatorXmpp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Unloaded="Page_Unloaded">

    <Border Padding="10">
        <StackPanel>
            <TextBlock Name="LocalFolder">Local folder:</TextBlock>
            <CheckBox Name="Relay" Click="Relay_Click" Margin="0,10,0,10">Relay output.</CheckBox>
            <TextBlock Text="Events:"/>
            <StackPanel Name="EventsPanel"/>
        </StackPanel>
    </Border>
</Page>
