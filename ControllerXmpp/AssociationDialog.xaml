<ContentDialog
    x:Class="ControllerXmpp.AssociationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControllerXmpp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="%0% Association"
    PrimaryButtonText="Connect"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_ConnectButtonClick"
    SecondaryButtonClick="ContentDialog_CancelButtonClick">

    <StackPanel>
        <TextBlock Name="Block1" TextWrapping="Wrap" Margin="0,16,0,0">There is no %0% associated with the controller. Please provide the address of the sensor below, for the controller to work properly.</TextBlock>
        <TextBox Name="JidInput" Header="XMPP Address (JID):" Margin="0,16,0,0" />
        <TextBlock Name="Block2" TextWrapping="Wrap" Margin="0,16,0,0">If the %0% resides behind a concentrator, you will also need to provide the corresponding node identity, and optionall the corresponding source identity and partition as well.</TextBlock>
        <TextBox Name="NodeIdInput" Header="Node ID:" Margin="0,16,0,0" />
        <TextBox Name="SourceIdInput" Header="Source ID:" Margin="0,16,0,0" />
        <TextBox Name="PartitionInput" Header="Partition:" Margin="0,16,0,0" />
    </StackPanel>
</ContentDialog>
